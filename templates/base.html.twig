<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="site-header">
            <span class="site-title">My Symfony Site - Report</span>
        </header>
        <nav>
            <ul>
                <li><a href="{{ path('/') }}">Home</a></li>
                <li><a href="{{ path('about') }}">About</a></li>
                <li><a href="{{ path('lucky') }}">Lucky</a></li>
                <li><a href="{{ path('quote') }}">Quote</a></li>
                <li><a href="{{ path('report') }}">Report</a></li>
                <li><a href="{{ path('card_init_post') }}">Card game</a></li>
                <li><a href="{{ path('api_land') }}">API</a></li>
                <li><a href="{{ path('twentyone_start') }}">Play 21</a></li>
                <li><a href="{{ path('app_library') }}">Library</a></li>
                <li><a href="{{ path('metrics') }}">Metrics</a></li>
            </ul>
        </nav>   
        {% block subheader %}{% endblock %}

        {% block body %}{% endblock %}
        <footer class="site-footer">
            <span class="site-footer">My footer. This page was made by Anna Blixt for MVC @ BTH</span>
        </footer>        
    </body>
</html>
