{% extends "base.html.twig" %}
{% block subheader %}
<div class="subheader">
    {% include "card/cardnav.html.twig" %}
</div>
{% endblock %}

{% block title %}Draw how many cards?{% endblock %}

{% block body %}
    <h1>Draw how many cards?</h1>

    <form method="post" action="">
        <input type="number" name="num_cards" min="1" max={{ remaining }} value="1">
        <input type="submit" name="do_it" value="Draw this many">
    </form>
    
    <p>Cards remaining: {{ remaining }} </p>

{% endblock %}