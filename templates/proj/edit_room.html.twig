{% extends 'proj/base.html.twig' %}

{% block title %}Edit Room{% endblock %}

{% block body %}

    <h1>Edit Room - ID: {{ id }}</h1>

    {{ form_start(form) }}
    <table class="form-table">

        <tbody>
            <tr>
                <td>{{ form_label(form.background) }}</td>
                <td>{{ form_widget(form.background) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.name) }}</td>
                <td>{{ form_widget(form.name) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.description) }}</td>
                <td>
                    {{ form_widget(form.description, {'attr': {'rows': 5}}) }}
                </td>
            </tr>
        </tbody>
    </table>

    <br>

    <div class="button-container">
        <button type="submit" class="update-button">Update</button>
        <a href="{{ path('game_view_all') }}" class="back-button">Back</a>
        <a href="{{ path('game_room_delete', {'id': id}) }}" class="delete-button">Delete</a>
    </div>
    
    {{ form_end(form) }}

    <div class="form-images">
        {% if form.background.vars.value is not empty %}
            <div class="image">
                <img src="{{ asset(form.background.vars.value) }}" alt="Background Image">
            </div>
        {% endif %}
    </div>

{% endblock %}
