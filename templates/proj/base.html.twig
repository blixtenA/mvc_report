<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('game') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('gameJS') }}
        {% endblock %}
    </head>
    <body>
        <header class="site-header">
            <span class="site-title">My Symfony Site - Report</span>
        </header>
        <nav>
            <ul>
                <li><a href="{{ path('app_project') }}">Home</a></li>
                <li><a href="{{ path('proj_about') }}">About</a></li>
                <li><a href="{{ path('proj_game_start') }}">Start game</a></li>
                <li><a href="{{ path('game_api_land') }}">Game API</a></li>
                <li><a href="{{ path('game_view_all') }}">View all game content</a></li>
            </ul>
        </nav>   
        {% block subheader %}{% endblock %}

        {% block body %}{% endblock %}
        <footer class="site-footer">
            <span class="site-footer">My footer. This page was made by Anna Blixt for MVC @ BTH</span>
        </footer>        
    </body>
</html>
